package sukodu;

public class sudokuSolver implements sudokuInterface {

	private int[][] sudoku;
	private static final int start = 0;

	public sudokuSolver() {
		this.sudoku = new int[9][9];
	}

	@Override
	public void setBoard(int[ ][ ] board) {
		this.sudoku = board;
		
	}
	@Override
	public int[][] getBoard() {
		
		return null;
	}
	@Override
	public boolean legal(int row, int col, int number) {
		// om det FINNS ett nummer i raden, kolumnen och boxen, returnera false
		if ((checkRow(row, number) || checkCol(col, number) || checkBox(row, col, number))) {
			return false;
		} else {
			return true;
		}
	}
	@Override
	public boolean solve() {
		// TODO Auto-generated method stub
		return false;
	}
	
	
	
//hjälpmetod för att checka radnummer 
	private boolean checkRow(int row, int number) {
		for (int i = 0; i < 9; i++) {
			// om numret redan finns i raden, returnera true, annars false
			if (sudoku[row][i] == number) {
				return true;
			}
		}
		return false;
	}

	// hjälpmetod för att checka kolumnnummer
	private boolean checkCol(int col, int number) {
		for (int i = 0; i < 9; i++) {
			// om siffran redan finns, returnera true
			if (sudoku[i][col] == number) {
				return true;
			}
		}
		return false;
	}

	// checka om numret ligger i 3x3 rutan
	private boolean checkBox(int row, int col, int number) {
		// beräkna startpositionen för 3x3 box
		int r = row - row % 3;
		int c = col - col % 3;
		// itererar genom varje cell i boxen
		for (int i = r; i < r + 3; i++) {
			for (int j = c; j < c + 3; j++) {

				if (sudoku[i][j] == number) {
					return true;
				}
			}
		}
		return false;
	}


}
